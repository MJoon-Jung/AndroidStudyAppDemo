<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/plan_border">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_plan_profile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/rp" />
        <ImageView
            android:id="@+id/iv_color"
            android:layout_width="15dp"
            android:layout_height="57dp"
            android:background="@color/white"
            android:layout_marginRight="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_plan_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:text="subjectset" />

            <TextView
                android:id="@+id/tv_plan_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/maincolor"
                android:text="timeset" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/btn_add_plan"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:background="@drawable/click_blue"
                android:text="추가" />

            <Button
                android:id="@+id/btn_min_plan"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:background="@drawable/click_blue"
                android:text="빼기" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
