<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment"
    >

    <TextView
        android:id="@+id/dateText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#3080ff"
        android:text="날짜"
        android:textSize="12dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:paddingVertical="10dp"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/studyTimeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/dateText"
        android:background="#3080ff"
        android:text="공부 시간"
        android:textSize="32dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:paddingVertical="2dp"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/restTimeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/studyTimeText"
        android:background="#3080ff"
        android:text="쉬는 시간"
        android:textSize="12dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:paddingVertical="10dp"
        android:textAlignment="center"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_home"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/restTimeText"
        app:layout_constraintBottom_toTopOf="@+id/btn_add_home"
        android:scrollbarFadeDuration="0"
        android:scrollbarSize="5dp"
        android:scrollbarThumbVertical="@android:color/darker_gray"
        android:scrollbars="vertical"
        />

    <Button
        android:id="@+id/btn_add_home"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="add" />
</androidx.constraintlayout.widget.ConstraintLayout>