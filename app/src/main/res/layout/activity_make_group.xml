<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <LinearLayout
        android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.group.MakeGroup"
    android:orientation="vertical"
    android:background="#F5F5F5"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="정보"
        android:background="#FFFFFF"
        android:paddingLeft="10dp"
        >
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="10"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:background="#FFFFFF"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="그룹 이름"
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:layout_weight="4"
            >
        </TextView>
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="그룹명을 적어주세요"
            android:id="@+id/groupName"
            android:layout_weight="6"
            android:background="@null"
            >
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginTop="3dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:background="#FFFFFF"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="카테고리"
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:layout_weight="4"
            >
        </TextView>
        <EditText
            android:clickable="true"
            android:focusable="false"
            android:cursorVisible="false"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="카테고리를 선택해 주세요"
            android:id="@+id/category"
            android:layout_weight="6"
            android:background="@null"
            >
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginTop="3dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:background="#FFFFFF"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="일일 목표 시간"
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:layout_weight="4"
            >
        </TextView>

        <EditText
            android:id="@+id/goalTime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:background="@null"
            android:clickable="true"
            android:cursorVisible="false"
            android:focusable="false"
            android:hint="일일 목표 시간을 설정해 주세요"></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginTop="3dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:background="#FFFFFF"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="모집 인원"
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:layout_weight="4"
            >
        </TextView>
        <EditText
            android:clickable="true"
            android:focusable="false"
            android:cursorVisible="false"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="0명"
            android:background="@null"
            android:id="@+id/personCount"
            android:layout_weight="6"
            >
        </EditText>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="그룹 소개/공지"
        android:textSize="18dp"
        android:gravity="center_vertical"
        android:layout_marginTop="3dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:background="#FFFFFF"
        >
        </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="horizontal"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:background="#FFFFFF"
        >
        <EditText
            android:id="@+id/contents"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:hint="어떤 그룹인지 설명해주세요"
            android:background="@null"
            >
        </EditText>
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="3dp"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:text="그룹 만들기"
        android:textSize="20dp"
        android:id="@+id/makeGroupButton"
        >
    </androidx.appcompat.widget.AppCompatButton>+
</LinearLayout>
</ScrollView>